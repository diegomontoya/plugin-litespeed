{
    "description" : "Displays important litespeed metrics",
    "icon" : "icon.png",
    "command" : "node index.js",
    "postExtract" : "npm install",
    "ignore" : "node_modules",

    "metrics" : [
        "LS_HTTP_CONNS_USAGE",
        "LS_HTTP_CONNS",
        "LS_HTTP_IDLE_CONNS",
        "LS_SSL_CONNS_USAGE",
        "LS_SSL_CONNS",
        "LS_SSL_IDLE_CONNS",
        "LS_HTTP_BYTES_IN",
        "LS_HTTP_BYTES_OUT",
        "LS_SSL_BYTES_IN",
        "LS_SSL_BYTES_OUT",
        "LS_TOTAL_BYTES_IN",
        "LS_TOTAL_BYTES_OUT",

        "LS_TOTAL_CACHE_HITS",
        "LS_TOTAL_CACHE_HITRATE",
        "LS_TOTAL_REQS_PROCESSING",
        "LS_TOTAL_REQS",

        "LS_CACHE_HITS",
        "LS_CACHE_HITRATE",
        "LS_REQS_PROCESSING",
        "LS_REQS",

        "LS_EXT_CMAXCONNS",
        "LS_EXT_EMAXCONNS",
        "LS_EXT_POOL_SIZE",
        "LS_EXT_INUSE_CONNS",
        "LS_EXT_IDLE_CONNS",
        "LS_EXT_QUEUE",
        "LS_EXT_REQS",
        "LS_EXT_TOTAL_REQS"
    ],

    "dashboards": [
        { "name": "Litespeed-Overview-Dev", "layout": "d-w=3&d-h=3&d-pad=5&d-bg=none&d-g-LS_SSL_BYTES_IN=1-0-1-1-t&d-g-LS_SSL_BYTES_OUT=1-0-1-1-b&d-g-LS_HTTP_BYTES_IN=0-0-1-1-t&d-g-LS_HTTP_BYTES_OUT=0-0-1-1-b&d-g-LS_TOTAL_BYTES_IN=2-0-1-1-t&d-g-LS_TOTAL_BYTES_OUT=2-0-1-1-b&d-g-LS_CACHE_HITRATE=2-2-1-1&d-g-LS_HTTP_CONNS=0-1-1-1&d-g-LS_HTTP_CONNS_USAGE=0-2-1-1&d-g-LS_SSL_CONNS=1-1-1-1&d-g-LS_SSL_CONNS_USAGE=1-2-1-1&d-g-LS_REQS=2-1-1-1" }
    ],

    "paramSchema" : [
         {
            "title" : "Report Path",
            "name" : "reportPath",
            "description" : "The system path to the lshttp .rtreport files. Default: /tmp/lshttpd.",
            "type" : "string",
            "default" : "/tmp/lshttpd"
        },
        {
            "title": "VHosts Filter",
            "name": "vhosts_filter",
            "description": "Include only specified vhosts in your graphs and exclude all others. If not set, all vhosts are shown. Format: vhost|alias.",
            "type" : "array",
            "items" : {
                "type" : "string"
            }
        },
        {
            "title": "Auto VHosts Limit",
            "name": "auto_vhosts_limit",
            "description": "Number of vhosts to show if vhost filtering is not enabled. Default: 20.",
            "type" : "integer",
            "default":  20
        },
        {
            "title": "Use Partial Hostname",
            "name": "partialHostname",
            "description": "Use only first part of system hostname. Default: disabled. Example: Disabled: toaster.oven.com. Enabled: toaster.",
            "type" : "boolean",
            "default" : false
        }
    ]
}
